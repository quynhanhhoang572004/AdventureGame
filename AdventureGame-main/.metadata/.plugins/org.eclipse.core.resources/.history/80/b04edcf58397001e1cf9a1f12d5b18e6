package main;

import java.net.URL;
import javax.sound.sampled.AudioInputStream;
import javax.sound.sampled.AudioSystem;
import javax.sound.sampled.Clip;

public class Sound {
	Clip clip;
	URL soundURL[] = new URL [30];
	
	public Sound() {
	    soundURL[0] = getClass().getResource("/res/sound/BlueBoyAdventure.wav");
	    soundURL[1] = getClass().getResource("/res/sound/coin.wav");
	    soundURL[2] = getClass().getResource("/res/sound/powerup.wav");
	    soundURL[3] = getClass().getResource("/res/sound/unlock.wav");
	    soundURL[4] = getClass().getResource("/res/sound/fanfare.wav");
	    for (int i = 0; i < soundURL.length; i++) {
	        if (soundURL[i] != null) {
	            System.out.println("soundURL[" + i + "] is initialized");
	        } else {
	            System.out.println("soundURL[" + i + "] is null");
	        }
	    }
	}

	public void setFile(int i) {
	    System.out.println("setFile is called with index: " + i);
	    try {
	        AudioInputStream ais = AudioSystem.getAudioInputStream(soundURL[i]);
	        clip = AudioSystem.getClip();
	        clip.open(ais);
	    } catch (Exception e) {
	        System.out.println("Exception occurred while setting file: " + soundURL[i]);
	        e.printStackTrace();
	    }
	}

	public void play() {
	    System.out.println("play is called");
	    clip.start();
	}
	
	public void loop() {
		clip.loop(Clip.LOOP_CONTINUOUSLY);
	}
	
	public void stop() {
		clip.stop();
	}
}
